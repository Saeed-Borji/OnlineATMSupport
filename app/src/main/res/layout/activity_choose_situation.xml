<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseSituation"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_background"
                android:text="@string/app_p_name" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textnavigate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_on_primary"
                android:text="@string/product_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/nixdorf"
                android:gravity="center|top"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/ncr"
                android:gravity="center|top"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/nixdorf"
                android:gravity="center|top"
                android:visibility="invisible"/>


            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/wordatm"
                android:gravity="center|top"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/hyosung"
                android:gravity="center|top"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/nixdorf"
                android:gravity="center|top"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/epsw"
                android:gravity="center|top"
                android:visibility="visible"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/nixdorf"
                android:gravity="center|top"
                android:visibility="invisible"/>


            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/grg"
                android:gravity="center|top"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/banquet"
                android:gravity="center|top"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/nixdorf"
                android:gravity="center|top"
                android:visibility="invisible"/>


            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/wincore"
                android:gravity="center|top"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/eastcom"
                android:gravity="center|top"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/UsernameBox"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#FBF8F8"
                            android:textColorHighlight="#009688"
                            android:textColorLink="#009688"
                            android:textCursorDrawable="@color/cardview_light_background" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="نام کاربری:"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/PasswordBox"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:textAlignment="center"
                            android:textColor="#FAF7F7"/>

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="کلمه عبور:"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pnlButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonfieldexpert"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/design_default_color_secondary_variant"
                        android:textSize="20dp"
                        android:text="کارشناس فیلد"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="190dp" />

                    <Button
                        android:id="@+id/buttontechnicalsupport"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/design_default_color_secondary_variant"
                        android:textSize="20dp"
                        android:text="پشتیبان فنی"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="190dp"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>