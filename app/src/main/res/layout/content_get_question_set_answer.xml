<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/backgrounddark">

    <fragment
        android:id="@+id/nav_host_fragment_content_get_question_set_answer"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph9" />

    <ImageView
        android:id="@+id/picpreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/framebevel2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_background"
                    android:text="@string/app_p_name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textnavigate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_on_primary"
                    android:text="@string/product_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/messageTexttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/messageText_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="متن توضیحات مشکل کارشناس"
                    android:gravity="center|bottom"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/errortextviewerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:background="@drawable/framebevel">

                <EditText
                    android:id="@+id/questionbox"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:ems="10"
                    android:hint="متن توضیحات مشکل کارشناس"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:singleLine="false"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textColorHighlight="#009688"
                    android:textColorLink="#009688"
                    android:textCursorDrawable="@color/design_default_color_on_secondary"
                    android:textSize="14sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/messageVoicetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/messageVoice_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text=" صدای توضیح مشکل کارشناس"
                    android:gravity="center|bottom"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/voiceplayerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:background="@drawable/framebevel">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="5dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="50dp"
                    android:minWidth="100dp"
                    android:progress="1"/>


                <ImageButton
                    android:id="@+id/Voiceplayerbtn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/playeblack"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/messagePictxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/messagePic_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="تصویر ماژول خراب یا کد خطای کارشناس"
                    android:gravity="center|bottom"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/messagePic"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_margin="2dp"
                android:background="@drawable/framebevel"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/errorpic"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/Erro"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/Errorpicbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/camtrswhite2"
                    android:visibility="visible"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/framebevel2">

            <LinearLayout
                android:id="@+id/AnswerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/AnswerTexttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AnswerText_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/design_default_color_secondary"
                        android:text="توضیحات کتبی شما برای کمک به کارشناس:"
                        android:gravity="center|bottom"
                        android:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Answertextviewerlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center|top"
                    android:orientation="horizontal"
                    android:background="@drawable/framebevel">

                    <EditText
                        android:id="@+id/Answerbox"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/buttonw"
                        android:ems="10"
                        android:hint="متن جواب:"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:singleLine="false"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textColorHighlight="#009688"
                        android:textColorLink="#009688"
                        android:textCursorDrawable="@color/design_default_color_on_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/AnswerVoicetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AnswerVoice_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/design_default_color_secondary"
                        android:text="توضیحات شفاهی شما برای کمک به کارشناس"
                        android:gravity="center|bottom"
                        android:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:background="@drawable/framebevel">

                    <ProgressBar
                        android:id="@+id/AnswerprogressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="5dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="50dp"
                        android:minWidth="100dp"
                        android:progress="1"/>

                    <ImageButton
                        android:id="@+id/AnswerVoiceplayerbtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="50dp"
                        android:visibility="visible"
                        android:background="@drawable/mic2"
                        android:layout_gravity="center"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/AnswerPictxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AnswerPic_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/design_default_color_secondary"
                        android:text="تصویر ارسالی شما برای کمک به کارشناس"
                        android:gravity="center|bottom"
                        android:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/AnswerPiclayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right|center"
                    android:orientation="horizontal"
                    android:background="@drawable/framebevel">

                    <ImageView
                        android:id="@+id/Answerpic"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/AnswerErro"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:visibility="visible"/>

                    <ImageButton
                        android:id="@+id/AnswerPicbtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/camtrswhite2"
                        android:visibility="visible"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/pnlButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonsendanswer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="ارسال پاسخ"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="12dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonclear"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="پاک کردن اطلاعات سوال"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>